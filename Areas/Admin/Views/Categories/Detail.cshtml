@model Category
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 >Category Detail</h3>
                        <h4>********************</h4>
                        <h3 class="card-title">Category:@Model.Name</h3>
                        <h6 >Categorynin Productlari</h6>

                        @foreach (var item in Model.Products)
                        {
                            <div class="col">
                                <div class="card">
                                    <img src="~/assets/img/portfolio/@item.Image class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <h6 class="card-text">@item.Description</h6>
                                        

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


