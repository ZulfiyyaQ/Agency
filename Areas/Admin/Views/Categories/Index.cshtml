
@model List<Category>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category</h4>
                        <p class="card-description">
                            <a class="btn btn-outline-success btn-sm" asp-controller="categories" asp-action="create">
                                <i class="mdi mdi-chevron-double-right"> <strong>Create</strong></i>
                            </a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Product Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td class="py-1">
                                                @count
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                               @item.Products.Count()
                                            </td>
                                            <td>
                                                <a class ="btn btn-info" asp-controller="categories" asp-action="update" asp-route-id="@item.Id">
                                                    <i class="mdi mdi-brush"></i>
                                               </a>
                                                <a class="btn btn-danger" asp-controller="categories" asp-action="delete" asp-route-id="@item.Id">
                                                    <i class="mdi mdi-delete-sweep"></i>
                                               </a>
                                                <a class="btn btn-secondary" asp-controller="categories" asp-action="detail" asp-route-id="@item.Id">
                                                    <i class="mdi mdi-book-open-page-variant"></i>
                                                </a>
                                            </td>
                                            
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
